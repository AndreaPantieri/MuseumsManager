                            <Label Content="Tipo della sezione:" Canvas.Left="10" Canvas.Top="371" FontWeight="Normal" Width="108"/>
                            <Label Content="Padre (facoltativo):" Canvas.Left="10" Canvas.Top="402" FontWeight="Normal"/>
                            <Label Content="Modifica una sezione:" Canvas.Left="10" Canvas.Top="242" FontWeight="Bold" Width="278"/>
                        </Canvas>
                    </GroupBox>
                    <GroupBox x:Name="gpb_eliminazioneMuseo_Copy1" Header="Orari di apertura/chiusura" HorizontalAlignment="Left" Height="253" Margin="598,379,0,0" VerticalAlignment="Top" Width="312" IsEnabled="False" FontWeight="Bold">
                        <Canvas x:Name="cnv_eliminazioneMuseo2" Margin="0,0,-2,-4">
                            <Button x:Name="btn_elimina2" Content="Modifica" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="206" Canvas.Top="204" FontWeight="Normal"/>
                            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Nuovo orario di apertura" VerticalAlignment="Top" Width="278" Canvas.Left="10" Canvas.Top="148" Foreground="Gray" FontWeight="Normal" FontStyle="Italic"/>
                            <Label Content="Modifica orari:" Canvas.Left="10" Canvas.Top="117" FontWeight="Bold" Width="278"/>
                            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Nuovo orario di chiusura" VerticalAlignment="Top" Width="278" Canvas.Left="10" Canvas.Top="176" Foreground="Gray" FontWeight="Normal" FontStyle="Italic"/>
                            <Label Content="Orari attuali" Canvas.Left="10" Canvas.Top="10" FontWeight="Bold" Width="278"/>
