                            <Label Content="Elimina una sezione:" Canvas.Left="10" Canvas.Top="465" FontWeight="Bold" Width="278"/>
                            <ComboBox Height="20" Width="191" Canvas.Left="10" Canvas.Top="496" FontWeight="Normal"/>
                            <Button x:Name="btn_elimina1_Copy" Content="Elimina" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="206" Canvas.Top="496" FontWeight="Normal"/>
                            <ComboBox Height="26" Width="165" Canvas.Left="123" Canvas.Top="371" FontWeight="Normal"/>
                            <Button x:Name="btn_elimina1_Copy3" Content="Modifica" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="206" Canvas.Top="433" FontWeight="Normal"/>
                            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="278" Canvas.Left="10" Canvas.Top="273" Foreground="Gray" FontWeight="Normal" FontStyle="Italic"/>
                            <TextBox HorizontalAlignment="Left" Height="66" TextWrapping="Wrap" Text="Descrizione" VerticalAlignment="Top" Width="278" Canvas.Left="10" Canvas.Top="301" Foreground="Gray" FontWeight="Normal" RenderTransformOrigin="0.517,0.136" FontStyle="Italic"/>
