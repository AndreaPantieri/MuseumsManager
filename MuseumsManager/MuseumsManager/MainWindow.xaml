                            <Label Content="Modifica il tipo di un museo:" Canvas.Left="10" FontWeight="Bold" Width="234" Canvas.Top="230"/>
                            <ComboBox Height="26" Width="176" Canvas.Left="68" Canvas.Top="261" FontWeight="Normal"/>
                            <ComboBox Height="26" Width="146" Canvas.Left="98" Canvas.Top="323" FontWeight="Normal"/>
                            <Label Content="Museo:" Canvas.Left="10" FontWeight="Normal" Width="53" Canvas.Top="261"/>
                            <Label Content="Nuovo tipo:" Canvas.Left="10" FontWeight="Normal" Width="83" Canvas.Top="323"/>
