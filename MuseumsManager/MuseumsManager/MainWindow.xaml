                            <Button x:Name="btn_elimina1_Copy5" Content="Rimuovi" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="162" Canvas.Top="288" FontWeight="Normal"/>
                            <Label Content="Museo:" Canvas.Left="10" Canvas.Top="257" FontWeight="Normal" Width="56"/>
                        </Canvas>
                    </GroupBox>
                    <GroupBox x:Name="gpb_creazioneMuseo_Copy1" Header="Categoria" HorizontalAlignment="Left" Height="287" Margin="548,10,0,0" VerticalAlignment="Top" Width="313" FontWeight="Bold">
                        <Canvas x:Name="cnv_creazioneMuseo2" Margin="0,0,-2,-4">
                            <Button x:Name="btn_elimina3" Content="Crea" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="211" Canvas.Top="41" FontWeight="Normal"/>
                            <TextBox HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="196" Canvas.Left="10" Canvas.Top="41" Foreground="Gray" FontWeight="Normal" FontStyle="Italic"/>
