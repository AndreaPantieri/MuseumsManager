                            <Label Content="Orario chiusura:" Canvas.Left="35" Canvas.Top="67" FontWeight="Normal" Width="96"/>
                            <Label Content="" Canvas.Left="136" Canvas.Top="36" FontWeight="Normal" Width="152"/>
                            <Label Content="" Canvas.Left="136" Canvas.Top="67" FontWeight="Normal" Width="152"/>
                        </Canvas>
                    </GroupBox>
                    <Label Content="NOME MUSEO" FontWeight="Bold" Margin="10,41,10,560" FontSize="24" HorizontalAlignment="Center"/>
                    <GroupBox x:Name="gpb_eliminazioneMuseo_Copy2" Header="Categoria" HorizontalAlignment="Left" Height="287" Margin="598,87,0,0" VerticalAlignment="Top" Width="313" IsEnabled="False" FontWeight="Bold">
                        <Canvas x:Name="cnv_eliminazioneMuseo3" Margin="0,0,-2,-4">

                            <Button x:Name="btn_elimina3_Copy" Content="Crea" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="211" Canvas.Top="41" FontWeight="Normal"/>
                            <TextBox HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="196" Canvas.Left="10" Canvas.Top="41" Foreground="Gray" FontWeight="Normal" FontStyle="Italic"/>
                            <Label Content="Crea un nuovo tipo di sezione:" Canvas.Left="10" Canvas.Top="10" FontWeight="Bold" Width="283"/>
                            <Label Content="Elimina un tipo di sezione:" Canvas.Left="10" Canvas.Top="66" FontWeight="Bold" Width="283"/>
                            <ComboBox Height="20" Width="196" Canvas.Left="10" Canvas.Top="97" FontWeight="Normal"/>
                            <Button x:Name="btn_elimina1_Copy4" Content="Elimina" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Canvas.Left="211" Canvas.Top="97" FontWeight="Normal"/>
                        </Canvas>
                    </GroupBox>
                    <GroupBox x:Name="gpb_eliminazioneMuseo_Copy3" Header="Riepilogo" HorizontalAlignment="Left" Height="545" Margin="10,87,0,0" VerticalAlignment="Top" Width="583" IsEnabled="False" FontWeight="Bold">
                        <Canvas x:Name="cnv_eliminazioneMuseo4" Margin="0,0,-2,-4">
                            <Label Content="Aperto dal:" Canvas.Left="10" Canvas.Top="10" FontWeight="Bold" Width="78"/>
                            <Label Content="Al:" Canvas.Left="10" Canvas.Top="36" FontWeight="Bold" Width="78"/>
                            <Label Content="Sezioni del museo:" Canvas.Left="10" Canvas.Top="301" FontWeight="Bold" Width="553"/>
                            <Label Content="Tipo del museo:" Canvas.Left="10" Canvas.Top="106" FontWeight="Bold" Width="553"/>
                            <Label Content="Famiglia di cui fa parte il museo:" Canvas.Left="10" Canvas.Top="165" FontWeight="Bold" Width="553"/>
                        </Canvas>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbi_calendario" Header="Calendario" IsEnabled="False">
                <Grid x:Name="grid_calendario" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tbi_contenuti" Header="Contenuti" IsEnabled="False">
                <Grid x:Name="grid_contenuti" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tbi_biglietti" Header="Biglietti" IsEnabled="False">
                <Grid x:Name="grid_biglietti" Background="#FFE5E5E5"></Grid>
            </TabItem>
            <TabItem x:Name="tbi_personale" Header="Personale" IsEnabled="False">
                <Grid x:Name="grid_personale" Background="#FFE5E5E5"></Grid>
            </TabItem>
            <TabItem x:Name="tbi_statistiche" Header="Statistiche" IsEnabled="False">
                <Grid x:Name="grid_statistiche" Background="#FFE5E5E5"></Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
