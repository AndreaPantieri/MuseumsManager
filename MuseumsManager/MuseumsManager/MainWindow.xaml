                            <Label Content="Elimina un tipo di museo:" Canvas.Left="10" Canvas.Top="66" FontWeight="Bold" Width="283"/>
                            <ComboBox Height="20" Width="196" Canvas.Left="10" Canvas.Top="97" FontWeight="Normal"/>
